<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidtablayout"
    android:versionCode="1"
    android:versionName="1.0" 
     android:screenOrientation="portrait">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
       <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/p1tlogo"
        android:label="@string/p1t" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.vimd.p1t.Home"
            android:label="@string/p1t" android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden" >
        </activity>

        <!-- Songs Activity -->
        <activity android:name="com.vimd.p1t.Experience" />

        <!-- Videos Activity -->
        <activity android:name="com.vimd.p1t.Dashboard" />

        <!-- Photos Activity -->
        <activity android:name="com.vimd.p1t.NearMe" android:screenOrientation="portrait" android:configChanges="orientation|keyboardHidden" />
        <activity
            android:name="com.vimd.p1t.Login"
            android:label="@string/p1t" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       
    </application>

</manifest>